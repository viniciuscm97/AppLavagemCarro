<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCarrosActivity">


    <TextView
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Dados do veÃ­culo"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/etPlaca"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Placa:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
    />
    <EditText
        android:id="@+id/etModelo"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Modelo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/etPlaca"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etAno"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Ano:"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPlaca" />

    <EditText
        android:id="@+id/etPortas"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Portas:"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/etAno"
        app:layout_constraintTop_toBottomOf="@+id/etModelo" />

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="Marca:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnSalvarCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMarca" />


</androidx.constraintlayout.widget.ConstraintLayout>